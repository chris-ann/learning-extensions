{
    "manifest_version": 3,
    "name": "Learning Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "icons": {
        "16": "images/hallway.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.ulethbridge.ca/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "scripts.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/*"
            ],
            "matches": [
                "https://www.ulethbridge.ca/*"
            ]
        },
        {
            "resources": [
                "fonts/*"
            ],
            "matches": [
                "https://www.ulethbridge.ca/*"
            ]
        }
    ]
}